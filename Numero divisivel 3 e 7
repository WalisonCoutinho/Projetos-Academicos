#include <stdio.h>

main() {
    int numero;
    int divisivelPor3,divisivelPor7;

    printf("Digite um numero inteiro:");
    scanf("%d",&numero);

    divisivelPor3=(numero%3==0);
    divisivelPor7=(numero%7==0);

    if(divisivelPor3) {
        if(divisivelPor7) {
            printf("O numero %d e divisivel por 3 por 7\n",numero);
        }
        else {
            printf("O numero %d nao e divisivel por 3 por 7\n",numero);
        }
    }
    else {
            printf("O numero %d nao e divisivel por 3 e por 7,\n",numero);
        }
    return 0;
}
